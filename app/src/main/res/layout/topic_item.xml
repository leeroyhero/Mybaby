<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textViewTopic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textPrimary"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewNickNameTopic"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/textSecondary"
            android:layout_below="@+id/textViewTopic"
            android:layout_alignLeft="@+id/textViewTopic"
            android:layout_alignStart="@+id/textViewTopic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Count"
            android:id="@+id/textViewCommentCount"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/textSecondary"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textViewNickNameTopic"
            android:layout_alignStart="@+id/textViewNickNameTopic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_forward_white_36dp"
            android:alpha=".5"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textViewCommentCount"
            android:layout_toEndOf="@+id/textViewCommentCount"
            android:src="@drawable/ic_comment_white_18dp"
            android:layout_marginLeft="4dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:background="@color/line"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"></LinearLayout>


</RelativeLayout>