<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.bogdanov.mybaby.WelcomeActivity"
    android:background="@drawable/gradient1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@+id/buttonWelcome"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cupidon_mini"
            android:id="@+id/imageViewWelcome" />

        <TextView
            android:text="Добро пожаловать!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWelcomeHello"
            android:textColor="@color/textPrimary"
            android:textSize="30sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:text="Представьтесь, пожалуйста"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewWelcomeReprYour"
            android:textColor="@color/textPrimary"
            android:textSize="24sp" />

        <EditText
            android:backgroundTint="@color/textPrimary"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextWelcome"
            android:layout_gravity="center_horizontal"
            android:hint="Введите ваше имя"
            android:maxLines="1"
            android:maxLength="20"
            android:textColorHint="@color/textWhiteTransparent"
            android:textColor="@color/textPrimary"
            android:singleLine="true"
            android:layout_marginTop="24dp"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:text="Продолжить"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWelcome"
        android:background="@drawable/view_circle"
        android:textColor="@color/textPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
