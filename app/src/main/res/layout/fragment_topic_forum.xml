<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.bogdanov.mybaby.Forum.TopicForumFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout3">

        <LinearLayout
            android:id="@+id/content_fragment_topic_forum"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout3"
        android:background="@drawable/multibutton"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_margin="8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать"
            android:id="@+id/buttonTopicAdd"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#00ffffff"
            android:textColor="@color/textPrimary"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text=""
            android:id="@+id/buttonSettings"
            android:background="@drawable/ic_settings_white_24dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/linearLayout4"
            android:layout_toStartOf="@+id/linearLayout4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text=""
            android:id="@+id/buttonRefresh"
            android:background="@drawable/ic_refresh_white_24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearLayout5"
            android:layout_toEndOf="@+id/linearLayout5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/line"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonTopicAdd"
            android:layout_toStartOf="@+id/buttonTopicAdd"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/linearLayout4"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/line"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/buttonTopicAdd"
            android:layout_toEndOf="@+id/buttonTopicAdd"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/linearLayout5" />
    </RelativeLayout>

</RelativeLayout>
