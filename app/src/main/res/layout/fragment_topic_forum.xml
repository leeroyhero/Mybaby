<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.bogdanov.mybaby.Forum.TopicForumFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout3">

        <LinearLayout
            android:id="@+id/content_fragment_topic_forum"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout3"
        android:background="@drawable/item_back"
        android:layout_margin="8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать"
            android:id="@+id/buttonTopicAdd"
            android:background="#00ffffff"
            android:textColor="@color/textPrimary"
            android:textSize="28sp"
            android:textStyle="italic"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/buttonRefresh"
            android:layout_toStartOf="@+id/buttonRefresh" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/line"
            android:id="@+id/linearLayout4"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonRefresh"
            android:layout_toStartOf="@+id/buttonRefresh"></LinearLayout>

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text=""
            android:id="@+id/buttonRefresh"
            android:background="@drawable/ic_refresh_white_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />
    </RelativeLayout>

</RelativeLayout>
